<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Imi.Project.Mobile.Pages" 
             xmlns:viewmodels="clr-namespace:Imi.Project.Mobile.ViewModels" 
             x:DataType="viewmodels:LoginViewModel"
             x:Class="Imi.Project.Mobile.Pages.LoginPage"
             Style="{StaticResource ContentPageStyle}">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="Wachtwoord" IsPassword="True" Text="{Binding Password}" />
            <Button Text="Inloggen" Command="{Binding LoginCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>